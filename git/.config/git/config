# This is Git's per-user configuration file.
[user]
	name = Haowei Wang
	email = hwwangwang@gmail.com
[rerere]
	enabled = true

[pull]
	rebase = false

[color "branch"]

	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	frag = magenta bold
	meta = yellow bold
	new = green bold 
	old = red bold
	whitespace = red reverse

[color "status"]

	added = yellow 
	changed = green 
	untracked = cyan

[alias] 
	s = status
	git = !git
	st = stash list
	switch-recent = !git branch --sort=-committerdate --format='%(refname:short)' | fzf --preview='git log --date=relative --color `git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'`..{}' | xargs git switch 

[core] 
	pager = delta

[delta]
	hyperlinks = true 
	line-numbers = true
	navigate = true
	syntax-theme = Monokai Extended

[diff] 
	colorMoved = default
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictStyle = zdiff3
[init]
	defaultBranch = main
[branch]
	sort = -committerdate
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
